<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/default_half_margin"
            app:cardCornerRadius="@dimen/default_half_margin"
            app:cardBackgroundColor="@color/card_dark_background"
            android:orientation="vertical">

        <TextView
                style="@style/TextAppearance.AppCompat.Title.Heading"
                android:text="@string/app_name"
                android:id="@+id/tvDate"/>

    </androidx.cardview.widget.CardView>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_half_margin"
            style="@style/TextAppearance.AppCompat.Medium"
    android:text="@string/app_name"/>


</LinearLayout>